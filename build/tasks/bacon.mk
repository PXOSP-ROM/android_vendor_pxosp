PXOSP_TARGET_PACKAGE := $(PRODUCT_OUT)/pxosp_$(TARGET_DEVICE)-$(PXOSP_VERSION)-$(PXOSP_BUILD_DATE)-$(PXOSP_BUILD_TYPE).zip

SHA256 := prebuilts/build-tools/path/$(HOST_PREBUILT_TAG)/sha256sum

.PHONY: bacon
bacon: $(INTERNAL_OTA_PACKAGE_TARGET)
	$(hide) ln -f $(INTERNAL_OTA_PACKAGE_TARGET) $(PXOSP_TARGET_PACKAGE)
	$(hide) $(SHA256) $(PXOSP_TARGET_PACKAGE) | sed "s|$(PRODUCT_OUT)/||" > $(PXOSP_TARGET_PACKAGE).sha256sum
	@echo "Package Complete: $(PXOSP_TARGET_PACKAGE)" >&2
